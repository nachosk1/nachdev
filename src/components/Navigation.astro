---
import { optionNav } from "../../constants/index.js";
import Switch from "../components/Switch.astro"
import Logo from "./Logo.astro";
---

<header class="fixed w-full bg-background shadow-sm z-30">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="md:flex md:items-center md:gap-12">
        <Logo />
      </div>

      <div class="hidden md:block">
        <nav aria-label="Global">
          <ul class="flex items-center gap-6 text-sm">
            {
              optionNav.map((option) => (
                <li>
                  <a
                    class="text-gray-500 transition duration-300 ease-in-out font-medium hover:text-gray-900 text-base"
                    href={option.path}
                  >
                    {option.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>
      </div>

      <div class="flex items-center gap-4">
        <Switch />
      </div>

      <div class="block md:hidden">
        <button
          class="rounded bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>

